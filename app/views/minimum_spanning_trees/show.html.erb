

<div class="marketing">

  <hr class="featurette-divider">

  <div class="row featurette">
    <div class="col-md-7">
      <div class="column-header">
        <div class="direction-step">
          1
        </div>
        <p class="lead">
          <b><%= @minimum_spanning_tree.name %></b>  |  This Map marks the Minimum Spanning Tree of the Locations Selected
        </p>
      </div>
      <input id="pac-input" class="controls" type="text"
             placeholder="Enter a location" style="display: none">
      <div class="map_outer">
        <div id="map"></div>
      </div>
    </div>
    <div class="col-md-5 locations-container">
      <div class="column-header">
        <div class="direction-step">
          2
        </div>
        <p class="lead">
          Below are all Edges of Your Minimum Spanning Tree
        </p>
      </div>
      <ul id="mst-input-list" class="list-group">
        <% if @mst_edges.count == 0 %>
            <div class="panel panel-default empty-location-holder js-empty-location-holder">
              <div class="panel-body">
                <p class="lead">
                <span class="text-muted">
                  There are no edges in this Minimum Spanning Tree.  You must enter at least two locations
                  for a valid MST.
                </span>
                </p>
              </div>
            </div>
        <% end %>
        <% @mst_edges.each do |edge| %>
            <li class="list-group-item">
              <%= edge.name1 %> > <%= edge.name2 %>
            </li>
        <% end %>

      </ul>

      <%= link_to 'Edit Minimum Spanning Tree', edit_minimum_spanning_tree_path(@minimum_spanning_tree), class: "btn btn-success" %>

    </div>
  </div>

  <hr class="featurette-divider">
</div>

<script>
  $mst_edges = <%= raw @mst_edges.to_json %>;

</script>
<script src="<%= @endpoint %>" defer></script>